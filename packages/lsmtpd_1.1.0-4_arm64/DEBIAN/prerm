#!/bin/sh
set -e

echo PURGE | debconf-communicate lsmtpd

if command -v systemctl >/dev/null 2>&1; then
    # If systemd is present, try to stop the service before upgrade/removal
    systemctl stop lsmtpd.service >/dev/null 2>&1 || true
    systemctl disable lsmtpd.service >/dev/null 2>&1 || true
fi

exit 0
